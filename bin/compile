#!/usr/bin/env bash
# echo "-----> Installing Youtube-dl"
# # change to the the BUILD_DIR ($1)
# #cd $1
# # download the binary 
# mkdir -p vendor/yt-dl
# cd vendor/yt-dl
# wget https://yt-dl.org/downloads/2014.11.26.4/youtube-dl -nv -O youtube-dl
# chmod a+x youtube-dl
# # curl https://yt-dl.org/downloads/2014.11.26.4/youtube-dl -s -O /app/vendor/yt-dl/youtube-dl
# #!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install youtube-dl"
BUILD_DIR=$1
VENDOR_DIR="vendor/yt-dl"
DOWNLOAD_URL="https://yt-dl.org/downloads/2014.11.26.4/youtube-dl"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL -O youtube-dl
chmod a+x youtube-dl
#| tar xz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/youtube-dl"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/yt-dl"' >> $PROFILE_PATH
#echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$HOME/vendor/ffmpeg/lib"' >> $PROFILE_PATH
